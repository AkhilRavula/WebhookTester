@page
@model IndexModel
@{
    ViewData["Title"] = "Create Webhook";
}

<div class="text-center">
    <h1 class="display-4">Webhook Tester</h1>
    <p>Create a unique URL to test webhooks and HTTP requests.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <input asp-for="Input.Description" class="form-control" placeholder="e.g. Stripe Payment Test" />
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Optional protection" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="form-text">If set, you'll need this password to view the requests.</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Create Webhook</button>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-page="/Webhooks/Index">View all created webhooks</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
